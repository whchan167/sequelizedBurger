      <div class="container">
           <div class="row">
                <div class="col-xs-12">
                     <div class="text-center">
                          <img id="burgerLogo" src="http://diylogodesigns.com/blog/wp-content/uploads/2016/01/Flamin-Burger-logo-99designs.png">
                     </div>
                </div>
           </div>

      <div class="container-fluid" id="center">
        <div class="row">
          <div class="col-md-6">
            <h1>My favorite burger</h1>

              {{#each burgers}}
                {{#unless this.devoured}}
                  <div>
                  <p class="menuItem">  {{this.burger_name}} </p>

                    <form class="burgerButton" action="/{{this.id}}?_method=PUT" method="POST">
                      <button class="btn btn-primary" type="submit">Eat Da Burger!</button>
                    </form>
                  <hr>
                  </div>
                {{/unless}}
              {{/each}}
          </div>
          
          <div class="col-md-2">
          </div>
          
          <div class="col-md-4">
              <h1>Devoured Burgers</h1>
              <ol>
                {{#each burgers}}
                  {{#if this.devoured}}
                  <li id="devouredBurgers">
                  {{this.burger_name}}</li>
                  {{/if}}
                {{/each}}
              </ol>

          </div>
        </div>
      </div>

      <div class="container-fluid" id="wrapper">
          
            <div class="row">
              <div class="col-md-3">
              </div>              
              <div class="col-md-6">
                <h1>Make YOUR Own Burger!</h1>
                
                <form class="form-inline" action="/" method="POST">
                
                <div class="form-group">
                <input type="text" id="burgerInput" name="burger_name" class="form-control" placeholder="Enter Burger Name" required>
                </div>
                
                <button class="btn btn-primary" type="submit">Make this Delicious Burger</button>
                </form>
              </div>
              <div class="col-md-3">
              </div>
            </div>
      </div>